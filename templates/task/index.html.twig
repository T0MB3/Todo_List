<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>To-Do List avec Pop-up</title>
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
</head>
<body>

    <h1>Ma To-Do List</h1>

    <!-- Bouton pour ajouter une tâche -->
    <button id="add-task-btn">Ajouter une tâche</button>

    <!-- Boutons de filtrage -->
    <div>
        <button class="filter-btn" data-filter="all">Toutes</button>
        <button class="filter-btn" data-filter="completed">Complétées</button>
        <button class="filter-btn" data-filter="pending">Non complétées</button>
    </div>

    <!-- Liste des tâches -->
    <ul id="task-list"></ul>

    <!-- Fenêtre pop-up -->
    <div class="popup-overlay"></div>
    <div class="popup" id="task-popup">
        <h2>Nouvelle Tâche</h2>
        <input type="text" id="popup-title" placeholder="Titre de la tâche" required>
        <textarea id="popup-description" placeholder="Description..."></textarea>
        <div class="popup-buttons">
            <button id="cancel-popup">Annuler</button>
            <button id="confirm-popup">Valider</button>
        </div>
    </div>

    <script src="{{ asset('app.js') }}"></script>
</body>
</html>
